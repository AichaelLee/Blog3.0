<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 对应dao接口 -->
<mapper namespace="com.ldb.dao.LinkDAO">
    <resultMap id="linkResultMap" type="com.ldb.pojo.po.LinkPO" >
        <id column="id" property="id" jdbcType="INTEGER" />
        <result column="linkName" property="linkName" jdbcType="VARCHAR" />
        <result column="linkUrl" property="linkUrl" jdbcType="VARCHAR" />
        <result column="orderNum" property="orderNum" jdbcType="INTEGER" />
    </resultMap>

    <sql id="list">
        linkName,linkUrl
    </sql>


    <select id="listLinkVO" resultMap="linkResultMap">
        select <include refid="list"/> from link order by orderNum
    </select>

</mapper> 